<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="760dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CalcText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/actiondesign"
            android:text="Calculator"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="#B47A8D"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/actiondesign"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:textSize="32sp">

        <ImageView
            android:id="@+id/buttonEraseOneChar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/actiondesign"
            android:contentDescription="מחק תו אחד"
            android:onClick="ClearOneCharFunc"
            android:padding="73dp"
            android:scaleType="centerInside"
            android:textSize="32sp"
            app:srcCompat="@android:drawable/ic_input_delete" />

        <Button
            android:id="@+id/buttonErase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/actiondesign"
            android:onClick="ClearFunc"
            android:text="AC"
            android:textColor="#fff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonSign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/actiondesign"
            android:onClick="PlusMinusFunc"
            android:text="+/-"
            android:textColor="#fff"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonDivision"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/actiondesign"
            android:onClick="ActsFunc"
            android:text="÷"
            android:textColor="#fff"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/actiondesign"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:textSize="32sp">

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="7"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="8"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="9"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonDouble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/actiondesign"
            android:onClick="ActsFunc"
            android:text="x"
            android:textColor="#fff"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/actiondesign"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        android:textSize="32sp">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="4"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="5"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="6"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/actiondesign"
            android:onClick="ActsFunc"
            android:text="-"
            android:textColor="#fff"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textSize="32sp">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="1"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="2"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="3"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/actiondesign"
            android:onClick="ActsFunc"
            android:text="+"
            android:textColor="#fff"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:textSize="32sp">

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/numberdesign"
            android:onClick="NumFunc"
            android:text="0"
            android:textColor="#991D44"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/actiondesign"
            android:onClick="EqualFunc"
            android:text="="
            android:textColor="#fff"
            android:textSize="32sp" />
    </LinearLayout>

</LinearLayout>